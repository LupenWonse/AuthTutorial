<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actvity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ahmet.inclass10tutorial.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editLoginEmail"
        android:layout_alignLeft="@+id/editLoginEmail"
        android:layout_alignStart="@+id/editLoginEmail"
        android:layout_marginTop="37dp"
        android:id="@+id/editLoginPassword"
        android:hint="Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editLoginEmail"
        android:hint="Email"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editLoginPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:id="@+id/buttonLoginDo"
        android:onClick="doLogin" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonLoginDo"
        android:layout_marginTop="49dp"
        android:id="@+id/textUserData"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />
</RelativeLayout>
