<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ahmet.inclass10tutorial.MainActivity">

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCreateUser"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/editSignupUsername"
        android:hint="@string/usernameHint" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPassword"
        android:hint="@string/hintPassword"
        android:layout_below="@+id/editSignupUsername"
        android:layout_alignLeft="@+id/editSignupUsername"
        android:layout_alignStart="@+id/editSignupUsername" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPasswordRepeat"
        android:hint="@string/hintPasswordRepeat"
        android:layout_below="@+id/editPassword"
        android:layout_alignLeft="@+id/editPassword"
        android:layout_alignStart="@+id/editPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/buttonCreateUser"
        android:layout_alignLeft="@+id/editPasswordRepeat"
        android:layout_alignStart="@+id/editPasswordRepeat"
        android:layout_marginTop="40dp"
        android:id="@+id/editLoginEmail"
        android:hint="Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/editLoginEmail"
        android:layout_alignLeft="@+id/editLoginEmail"
        android:layout_alignStart="@+id/editLoginEmail"
        android:layout_marginTop="33dp"
        android:id="@+id/editLoginPassword"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editLoginPassword"
        android:layout_alignRight="@+id/buttonCreateUser"
        android:layout_alignEnd="@+id/buttonCreateUser"
        android:layout_marginTop="34dp"
        android:id="@+id/buttonLogin" />
</RelativeLayout>
